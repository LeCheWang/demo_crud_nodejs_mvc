<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/nations.css">
</head>
<body>
    <div class="container">
        <div class="list_nations">
            <table border="1" cellspacing="0">
                <caption>
                    <h1>Nations</h1>
                </caption>
                <thead>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Function</th>
                </thead>
                <tbody>
                    <% nations.forEach(function(nation){ %>
                        <tr>
                            <td><%= nation._id %></td>
                            <td><%= nation.name %></td>
                            <td><%= nation.description %></td>
                            <td>
                                <button><a href="/nations/<%= nation._id %>">Edit</a></button>
                                <button onclick="deleteNation('<%= nation._id %>')" style="color: red">Delele</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="form_add_nation">
            <form action="/nations" method="POST">
                <label for="">
                    Name
                </label>
                <br>
                <input id="ip_name" type="text" name="name"  placeholder="type name">

                <label style="margin-top: 20px;" for="">
                    Description
                </label>
                <br>
                <input id="ip_description" type="text" name="description" placeholder="type description">
                <button id="btn_add_nation" type="submit" style="margin-top: 20px; padding: 10px;">Add Nation</button>
            </form>
        </div>
    </div>
    <script src="js/nations.script.js"></script>
</body>
</html>